<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_update_schedule_content_layout_parent_vll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="me.muktadir.uflscheduler.activities.UpdateScheduleActivity"
    tools:showIn="@layout/activity_update_schedule">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/activity_update_schedule_content_layout_input_fields_cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="@dimen/margin_5dp"
        card_view:cardElevation="@dimen/margin_5dp">

        <LinearLayout
            android:id="@+id/activity_update_schedule_content_layout_input_fields_vll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/activity_update_schedule_content_layout_client_name_til"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/activity_update_schedule_content_layout_client_name_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/client_name_title"
                    android:imeOptions="actionNext"
                    android:inputType="textPersonName"
                    android:maxLines="1"
                    android:padding="@dimen/margin_10dp"
                    android:textColor="@color/primary_color"
                    android:textColorHint="@color/primary_color_dark"
                    android:textSize="20sp" />

            </android.support.design.widget.TextInputLayout>

            <!--<View-->
            <!--android:id="@+id/activity_update_schedule_content_layout_horizontal_bar_ev_1"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="1dp"-->
            <!--android:background="@color/accent" />-->

            <LinearLayout
                android:id="@+id/activity_update_schedule_content_layout_start_date_hll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="1">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/activity_update_schedule_content_layout_start_date_til"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".85">

                    <EditText
                        android:id="@+id/activity_update_schedule_content_layout_start_date_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/start_date_hint"
                        android:imeOptions="actionNext"
                        android:inputType="date"
                        android:maxLines="1"
                        android:padding="@dimen/margin_10dp"
                        android:textColor="@color/primary_color"
                        android:textColorHint="@color/primary_color_dark"
                        android:textSize="20sp" />

                </android.support.design.widget.TextInputLayout>

                <ImageButton
                    android:id="@+id/activity_update_schedule_content_layout_start_date_picker_ib"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".13"
                    android:background="@drawable/rounded_corner_primary_coler_background_dark_border"
                    android:contentDescription="@string/start_date_hint"
                    android:padding="@dimen/margin_5dp"
                    android:tint="@android:color/white"
                    ripple:srcCompat="@mipmap/ic_date_picker" />

            </LinearLayout>

            <!--<View-->
            <!--android:id="@+id/activity_update_schedule_content_layout_horizontal_bar_ev_2"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="1dp"-->
            <!--android:background="@color/accent" />-->

            <LinearLayout
                android:id="@+id/activity_update_schedule_content_layout_start_time_hll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="1">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/activity_update_schedule_content_layout_start_time_til"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".85">

                    <EditText
                        android:id="@+id/activity_update_schedule_content_layout_start_time_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/start_time_hint"
                        android:imeOptions="actionNext"
                        android:inputType="time"
                        android:maxLines="1"
                        android:padding="@dimen/margin_10dp"
                        android:textColor="@color/primary_color"
                        android:textColorHint="@color/primary_color_dark"
                        android:textSize="20sp" />

                </android.support.design.widget.TextInputLayout>

                <ImageButton
                    android:id="@+id/activity_update_schedule_content_layout_start_time_picker_ib"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".13"
                    android:background="@drawable/rounded_corner_primary_coler_background_dark_border"
                    android:contentDescription="@string/start_time_hint"
                    android:padding="@dimen/margin_5dp"
                    android:tint="@android:color/white"
                    ripple:srcCompat="@mipmap/ic_time_picker" />

            </LinearLayout>

            <!--<View-->
            <!--android:id="@+id/activity_update_schedule_content_layout_horizontal_bar_ev_3"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="1dp"-->
            <!--android:background="@color/accent" />-->

            <LinearLayout
                android:id="@+id/activity_update_schedule_content_layout_end_date_hll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="1">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/activity_update_schedule_content_layout_end_date_til"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".85">

                    <EditText
                        android:id="@+id/activity_update_schedule_content_layout_end_date_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/end_date_hint"
                        android:imeOptions="actionNext"
                        android:inputType="date"
                        android:maxLines="1"
                        android:padding="@dimen/margin_10dp"
                        android:textColor="@color/primary_color"
                        android:textColorHint="@color/primary_color_dark"
                        android:textSize="20sp" />

                </android.support.design.widget.TextInputLayout>

                <ImageButton
                    android:id="@+id/activity_update_schedule_content_layout_end_date_picker_ib"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".13"
                    android:background="@drawable/rounded_corner_primary_coler_background_dark_border"
                    android:contentDescription="@string/end_date_hint"
                    android:padding="@dimen/margin_5dp"
                    android:tint="@android:color/white"
                    ripple:srcCompat="@mipmap/ic_date_picker" />

            </LinearLayout>

            <!--<View-->
            <!--android:id="@+id/activity_update_schedule_content_layout_horizontal_bar_ev_4"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="1dp"-->
            <!--android:background="@color/accent" />-->

            <LinearLayout
                android:id="@+id/activity_update_schedule_content_layout_end_time_hll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="1">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/activity_update_schedule_content_layout_end_time_til"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".85">

                    <EditText
                        android:id="@+id/activity_update_schedule_content_layout_end_time_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/end_time_hint"
                        android:imeOptions="actionGo"
                        android:inputType="time"
                        android:maxLines="1"
                        android:padding="@dimen/margin_10dp"
                        android:textColor="@color/primary_color"
                        android:textColorHint="@color/primary_color_dark"
                        android:textSize="20sp" />

                </android.support.design.widget.TextInputLayout>

                <ImageButton
                    android:id="@+id/activity_update_schedule_content_layout_end_time_picker_ib"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".13"
                    android:background="@drawable/rounded_corner_primary_coler_background_dark_border"
                    android:contentDescription="@string/end_time_hint"
                    android:padding="@dimen/margin_5dp"
                    android:tint="@android:color/white"
                    ripple:srcCompat="@mipmap/ic_time_picker" />

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/activity_update_schedule_content_layout_button_cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        card_view:cardCornerRadius="@dimen/margin_5dp"
        card_view:cardElevation="@dimen/margin_5dp">

        <com.andexert.library.RippleView
            android:id="@+id/activity_update_schedule_content_layout_button_rv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            ripple:rv_color="@color/accent"
            ripple:rv_rippleDuration="100"
            ripple:rv_type="rectangle">

            <TextView
                android:id="@+id/activity_update_schedule_content_layout_button_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_5dp"
                android:gravity="center"
                android:minWidth="200dp"
                android:padding="10dp"
                android:text="@string/update_schedule_title"
                android:textColor="@color/primary_color_dark"
                android:textSize="22sp"
                android:textStyle="bold" />

        </com.andexert.library.RippleView>
    </android.support.v7.widget.CardView>
</LinearLayout>
